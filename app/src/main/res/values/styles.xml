<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- LoadingDialog -->
        <item name="loading_dialog_progress_bar_style">@style/Loading.ProgressBar</item>
        <item name="loading_dialog_background">@color/background_main</item>
        <item name="loading_dialog_text_color">@color/text_black</item>
        <item name="loading_dialog_text_size">@dimen/text_small</item>
        <item name="dialog_measure_button_style">@style/Dialog.Buttons</item>
        <!--<item name="radiobutton_colorlabel">@style/ColorLabelRadioButton</item>-->
        <item name="item_click_background">@drawable/background_item_white2gray</item>
        <item name="item_click_background_transparent">@drawable/background_item_trans2gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 点击背景 -->
        <item name="item_default_background">@drawable/item_click_bg_transparent</item>
        <item name="item_card_background">@android:color/transparent</item>

        <!-- LoadingDialog -->
        <item name="loading_dialog_progress_bar_style">@style/Loading.ProgressBar</item>
        <item name="loading_dialog_background">@drawable/background_loading_dialog_dark</item>
        <item name="loading_dialog_text_color">@color/text_white</item>
        <item name="loading_dialog_text_size">@dimen/text_small</item>
        <item name="dialog_measure_button_style">@style/Dialog.Buttons</item>
    </style>

    <style name="Dialog" parent="AlertDialog.AppCompat.Light"/>

    <style name="Dialog.FullScreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Dialog.Buttons">
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">?attr/item_default_background</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Loading.ProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Inverse"/>

    <style name="Loading.ProgressBar.Large" parent="@android:style/Widget.Holo.Light.ProgressBar.Large.Inverse"/>

    <style name="Loading.ProgressBar.Small" parent="@android:style/Widget.Holo.Light.ProgressBar.Small.Inverse"/>

    <style name="TextAppearance"/>

    <style name="TextAppearance.Dialog">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:minHeight">@dimen/dialog_new_item_name_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center_vertical|left|</item>
    </style>

    <style name="TextAppearance.Dialog.NameText">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">@dimen/dialog_new_item_name_width</item>
        <item name="android:layout_height">@dimen/dialog_new_item_name_height</item>
    </style>

    <style name="TextAppearance.Dialog.ValueEdit">
        <item name="android:maxWidth">@dimen/dialog_new_item_content_width</item>
        <item name="android:ellipsize">start</item>
    </style>

    <style name="TextAppearance.Dialog.Title">
        <item name="android:layout_height">@dimen/dialog_new_item_title_height</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
    </style>

    <style name="TextAppearance.EditActions">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center_vertical|left|</item>
    </style>

    <style name="TextAppearance.EditActions.Tips">
        <item name="android:padding">@dimen/padding_normal</item>
    </style>
