<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="@dimen/dialog_width_normal"
              android:orientation="vertical"
              android:padding="@dimen/padding_normal">

    <TextView
        android:id="@+id/tv_dialog_confirm_title"
        style="@style/TextAppearance.Dialog.Title"
        android:layout_width="match_parent"
        android:text="@string/confirm"/>

    <TextView
        android:id="@+id/tv_dialog_confirm_msg"
        style="@style/TextAppearance.Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/inventory_name"/>

</LinearLayout>