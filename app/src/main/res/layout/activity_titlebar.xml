<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_toolbar_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_toolbar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.yifan.jotting2.widget.TitleBar
            android:id="@+id/titlebar_toolbar_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.ViewStubCompat
        android:id="@+id/vsc_toolbar_activity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/abl_toolbar_activity" />

    <com.yifan.jotting2.widget.LoadingView
        android:id="@+id/loadingview_toolbar_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar_toolbar_activity" />

</RelativeLayout>