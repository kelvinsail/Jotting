<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_carview"
    android:layout_marginRight="@dimen/margin_carview"
    android:layout_marginTop="@dimen/margin_carview"
    android:foreground="?attr/item_card_background"
    android:padding="@dimen/padding_carview"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/iv_item_project_label"
        android:layout_width="@dimen/size_project_label"
        android:layout_height="@dimen/size_project_label"
        android:layout_gravity="left"
        android:layout_margin="@dimen/padding_carview"
        android:src="@drawable/icon_inventory" />

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_carview"
        android:layout_marginLeft="@dimen/start_local_project_name"
        android:layout_marginRight="@dimen/padding_carview"
        android:layout_marginTop="@dimen/padding_carview"
        android:text="面试需知"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_xxlarge" />
</android.support.v7.widget.CardView>