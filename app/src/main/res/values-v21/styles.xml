<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 点击背景 -->
        <item name="item_default_background">?attr/selectableItemBackground</item>
        <item name="item_card_background">?attr/selectableItemBackground</item>
        <item name="item_click_background">@drawable/item_click_background_white2ripple</item>
        <item name="item_click_background_transparent">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Loading.ProgressBar" parent="@android:style/Widget.Material.Light.ProgressBar.Inverse">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="Loading.ProgressBar.Large" parent="@android:style/Widget.Material.Light.ProgressBar.Large.Inverse">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="Loading.ProgressBar.Small" parent="@android:style/Widget.Material.Light.ProgressBar.Small.Inverse">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>
</resources>
